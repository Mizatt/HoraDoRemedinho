<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TelaConfiguracao">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/configuracao"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/botaoVoltar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/botaovoltar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"/>

    <Button
        android:id="@+id/botaoSair"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sair"/>
</RelativeLayout>