<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TelaConfiguracao">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="131.25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/configuracao"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/botaoVoltar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/botaovoltar" android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentStart="true" android:layout_marginStart="22dp"/>

    <Button
        android:id="@+id/botaoSair"
        android:hint="Sair"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sair"/>

</RelativeLayout>