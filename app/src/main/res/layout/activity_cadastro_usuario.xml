<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroUsuario"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

    <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cadastrese"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/botaoVoltar"
        android:layout_width="12dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/botaovoltar" />


    <EditText
        android:id="@+id/NomeUsuario"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="206dp"
        android:background="@drawable/edittext"
        android:hint="Insira o seu nome:"
        android:paddingLeft="10dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EmailUsuario"
        android:layout_width="335dp"
        android:layout_centerHorizontal="true"
        android:layout_height="48dp"
        android:layout_below="@+id/NomeUsuario"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittext"
        android:hint="Insira o seu email:"
        android:paddingStart="10dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/PrimeiraSenha"
        android:layout_centerHorizontal="true"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_below="@+id/EmailUsuario"
        android:layout_marginTop="26dp"
        android:background="@drawable/edittext"
        android:hint="Insira sua senha:"
        android:paddingLeft="10dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/confirmaSenha"
        android:layout_width="335dp"
        android:layout_centerHorizontal="true"
        android:layout_height="48dp"
        android:layout_below="@+id/PrimeiraSenha"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittext"
        android:hint="Confirme sua senha:"
        android:paddingLeft="10dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/botaoSalvarCadastro"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/salvar" />


</RelativeLayout>