<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroDeRemedios"
        android:orientation="vertical"
        android:background="@color/colorPrimary">


    <ImageView
            android:id="@+id/headercadastroremedinho"
            android:layout_width="match_parent"
            android:layout_height="131.25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/headercadastro"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/botaoVoltar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/botaovoltar" android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentStart="true" android:layout_marginStart="22dp"/>

    <EditText
        android:id="@+id/nomeDoRemedio"
        android:layout_width="335dp"
        android:layout_centerHorizontal="true"
        android:layout_height="55dp"
        android:layout_below="@+id/headercadastroremedinho"
        android:layout_marginTop="71dp"
        android:background="@drawable/edittext"
        android:hint=" Insira o nome do remédio"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeDoRemedio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Horário para lembrete:"
        android:textSize="22sp" />

    <TimePicker
        android:id="@+id/horarioLembrete"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
        android:amPmTextColor="@color/colorPrimaryDark"
        android:numbersBackgroundColor="@color/colorPrimary"
        android:numbersSelectorColor="@color/colorPrimaryDark"
        android:textSize="100sp"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/botaoSalvarRemedinho"
        android:layout_centerHorizontal="true"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_below="@+id/horarioLembrete"
        android:layout_marginTop="35dp"
        android:background="@drawable/salvar" />

    <Button
        android:id="@+id/botaoCancelar"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_below="@+id/botaoSalvarRemedinho"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/cancelar" />

</RelativeLayout>